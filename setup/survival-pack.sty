% references all boxes by grouping
% example:
% \referTo{syntax, code, syntax, code, syntax, code}{definition variable, intro code, definition enum, intro code, definition union, intro code}
\ExplSyntaxOn
\cs_new:Nn \my_private_func:nn 
{
  \str_case:nn {#2}
    {
      {syntax}{\seq_put_right:Nn \l_refer_tmpa_seq {Syntax~\textsection\ref{syntax:#1},~p.~\pageref{syntax:#1}}}
      {code}{\seq_put_right:Nn \l_refer_tmpb_seq {Code~\textsection\ref{code:#1},~p.~\pageref{code:#1}}}
      {task}{\seq_put_right:Nn \l_refer_tmpc_seq {Task~\textsection\ref{task:#1},~p.~\pageref{task:#1}}}
      % Add more cases if necessary
    }
}

\NewDocumentCommand{\referTo}{mm} % Two arguments: 1. types, 2. labels
{
  \seq_new:N \l_refer_tmpa_seq
  \seq_new:N \l_refer_tmpb_seq
  \seq_new:N \l_refer_tmpc_seq
  \seq_set_from_clist:Nn \l_refer_tmpd_seq {#2} % labels
  \seq_set_from_clist:Nn \l_refer_tmpe_seq {#1} % types
  
  (see~
  \seq_mapthread_function:NNN \l_refer_tmpd_seq \l_refer_tmpe_seq \my_private_func:nn
  
  \int_compare:nTF {\seq_count:N \l_refer_tmpa_seq > 1}
    {\seq_use:Nnnn \l_refer_tmpa_seq {,~ } {,~ } {,~and~}}
    {\seq_use:Nn \l_refer_tmpa_seq {}}
  \seq_if_empty:NF \l_refer_tmpb_seq {,~and~\int_compare:nTF {\seq_count:N \l_refer_tmpb_seq > 1}
    {\seq_use:Nnnn \l_refer_tmpb_seq {,~ } {,~ } {,~and~}}
    {\seq_use:Nn \l_refer_tmpb_seq {}}}
  \seq_if_empty:NF \l_refer_tmpc_seq {,~and~\int_compare:nTF {\seq_count:N \l_refer_tmpc_seq > 1}
    {\seq_use:Nnnn \l_refer_tmpc_seq {,~ } {,~ } {,~and~}}
    {\seq_use:Nn \l_refer_tmpc_seq {}}}
  )
}

